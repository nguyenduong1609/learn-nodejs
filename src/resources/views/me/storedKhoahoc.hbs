<div class='mt-4'>
  <div>
    <h2>Khóa Học Của Tôi</h2>
    <a class='text-decoration-none' href='/me/recycle/khoahoc'>Thùng Rác</a>
  </div>

  <table class='table mt-4'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Tên khóa học</th>
        <th scope='col'>Trình độ</th>
        <th scope='col' colspan='2'>Thời gian tạo</th>

      </tr>
    </thead>
    <tbody>
      {{#each khoahoc}}
        <tr>
          <th scope='row'>{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.lever}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a
              href='/khoahoc/{{this._id}}/edit'
              class='btn btn-link text-decoration-none'
            >Sửa</a>
            <a
              href=''
              data-bs-toggle='modal'
              data-bs-target='#exampleModal'
              data-bs-id='{{this._id}}'
              class='btn btn-link text-decoration-none'
            >Xóa</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td class='text-center' colspan='5'>
            Bạn chưa đăng khóa học nào.
            <a class='text-decoration-none' href='/khoahoc/create'>Đăng khóa
              học!</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{! hiện cảnh báo }}

<div
  class='modal fade'
  id='exampleModal'
  tabindex='-1'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='exampleModalLabel'>Xóa bỏ khóa học</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        bạn có muốn xóa bỏ???
      </div>
      <div class='modal-footer'>
        <button id='btn-delete-khoahoc' type='button' class='btn btn-danger'>Xóa
          bỏ</button>
        <button
          type='button'
          class='btn btn-primary'
          data-bs-dismiss='modal'
        >Hủy</button>
      </div>
    </div>
  </div>
</div>

{{! form xóa bỏ ẩn }}
<form name='delete-khoahoc-form' method='POST'></form>
<script>
  var idkhoahoc; var deleteForm = document.forms['delete-khoahoc-form']; var
  btnDeleteKhoahoc = document.getElementById('btn-delete-khoahoc'); var
  exampleModal = document.getElementById('exampleModal');
  exampleModal.addEventListener('show.bs.modal', function (event) { var button =
  event.relatedTarget; idkhoahoc = button.getAttribute('data-bs-id')});
  btnDeleteKhoahoc.onclick = function () { deleteForm.action =
  '/khoahoc/'+idkhoahoc +'?_method=DELETE'; deleteForm.submit()};
</script>